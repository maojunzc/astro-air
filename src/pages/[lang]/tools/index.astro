---
import { en, zh } from "~/config"
import { getLangFromUrl } from "~/i18n/utils"
import MainLayout from "~/layouts/main.astro"
import { getLanguagePaths } from "~/utils/langs"

// 导入工具数据
import toolsData from "~/config/tools.json"

export function getStaticPaths() {
  return getLanguagePaths()
}

const lang = getLangFromUrl(Astro.url)
const pageMeta = lang === "zh" ? zh.pageMeta : en.pageMeta
const isChinese = lang === "zh"
---

<MainLayout
  title={pageMeta.tools.title}
  description={pageMeta.tools.description}
  ogImage={pageMeta.tools.ogImage}
  needComment={false}
>
  <div class="mx-auto my-10 max-w-6xl">
    <h1 class="mb-12 text-center text-3xl font-bold">
      {isChinese ? "实用工具" : "Useful Tools"}
    </h1>

    <!-- 工具分类列表 -->
    {toolsData.map((category, categoryIndex) => (
      <div key={categoryIndex} class="mb-12">
        <h2 class="mb-6 border-b pb-2 text-2xl font-bold text-green-600 dark:text-green-400">
          {isChinese ? category.category : category.categoryEn}
        </h2>
        
        <!-- 工具网格 -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {category.tools.map((tool, toolIndex) => (
            <a
              key={toolIndex}
              href={tool.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group overflow-hidden rounded-lg bg-white p-4 shadow-md transition-all hover:shadow-lg dark:bg-gray-800"
            >
              <h3 class="mb-2 text-lg font-semibold text-gray-900 group-hover:text-green-600 dark:text-white dark:group-hover:text-green-400">
                {tool.name}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {isChinese ? tool.description : tool.descriptionEn || tool.description}
              </p>
            </a>
          ))}
        </div>
      </div>
    ))}

    <!-- 工具提示 -->
    <div
      class="mt-12 rounded-lg border border-green-200 bg-green-50 p-6 dark:border-green-800 dark:bg-green-900/20"
    >
      <h3 class="mb-4 text-lg font-semibold text-green-700 dark:text-green-400">
        {isChinese ? "工具提示" : "Tool Tips"}
      </h3>
      <ul
        class="list-inside list-disc space-y-2 text-sm text-gray-700 dark:text-gray-300"
      >
        <li>
          {isChinese
            ? "点击工具名称访问对应网站"
            : "Click on the tool name to visit the corresponding website"}
        </li>
        <li>
          {isChinese
            ? "所有工具均为外部链接，点击后会打开新窗口"
            : "All tools are external links and will open in a new window"}
        </li>
        <li>
          {isChinese
            ? "请合理使用这些工具，遵守相关法律法规"
            : "Please use these tools rationally and comply with relevant laws and regulations"}
        </li>
      </ul>
    </div>
  </div>
</MainLayout>